<Window x:Class="LPOO2_GRUPO_08.WinABMUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuario" Height="300" Width="456" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Volver" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="btnVolver" VerticalAlignment="Top" Width="49" Click="btnVolver_Click" TabIndex="6" />
        <Label Content="Alta Usuario" Height="28" HorizontalAlignment="Left" Margin="173,12,0,0" Name="lblTitulo" VerticalAlignment="Top" FontSize="16" />
        <Label Content="Apellido y nombre" Height="28" HorizontalAlignment="Left" Margin="88,68,0,0" Name="lblApellido" VerticalAlignment="Top" />
        <Label Content="Usuario" Height="28" HorizontalAlignment="Left" Margin="146,139,0,0" Name="lblUsername" VerticalAlignment="Top" />
        <Label Content="Contraseña" Height="28" HorizontalAlignment="Left" Margin="126,173,0,0" Name="lblPassword" VerticalAlignment="Top" />
        <Label Content="Rol" Height="28" HorizontalAlignment="Left" Margin="169,105,0,0" Name="lblRol" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="212,72,0,0" Name="txtApellido" VerticalAlignment="Top" Width="120" TabIndex="1" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="212,139,0,0" Name="txtUsername" VerticalAlignment="Top" Width="120" TabIndex="3" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="212,173,0,0" Name="txtPassword" VerticalAlignment="Top" Width="120" TabIndex="4" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="212,105,0,0" Name="cmbRol" VerticalAlignment="Top" Width="120" TabIndex="2">
            <ComboBoxItem Content="Administrador" />
            <ComboBoxItem Content="Mozo" />
            <ComboBoxItem Content="Vendedor" />
        </ComboBox>
        <Button Content="Guardar" Height="23" HorizontalAlignment="Left" Margin="183,217,0,0" Name="btnGuardar" VerticalAlignment="Top" Width="75" Click="btnGuardar_Click" TabIndex="5" />
    </Grid>
</Window>
