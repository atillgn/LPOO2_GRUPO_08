<Window x:Class="LPOO2_GRUPO_08.WinMenuAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        Title="Administrador" Height="556" Width="960" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="24" Name="titleBar" Background="#1D1A27" MouseDown="titleBar_MouseDown">
            <TextBlock Margin="10 0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontWeight="DemiBold">Menú Administrador</TextBlock>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <StackPanel Width="478"/>
                <Button HorizontalAlignment="Right" Style="{StaticResource BtnWin}" Height="24" Width="30" Foreground="White" Name="bntMinimizeScreen" Click="bntMinimizedScreen_Click">
                    <Image Source="./Resources/min.png" Width="30" Height="15" />
                </Button>

                <Button HorizontalAlignment="Right" Style="{StaticResource BtnWin}" Height="24" Width="30 " Foreground="White" Name="btnMaximizeScreen" Click="btnMaximizeScreen_Click">
                    <Image Source="./Resources/max.png" Width="30" Height="15" />
                </Button>

                <Button HorizontalAlignment="Right" Style="{StaticResource BtnWin}" Height="24" Width="30 " Foreground="White" Name="btnClose"  Click="btnClose_Click">
                    <Image Source="./Resources/Exit.png" Width="30" Height="15" />
                </Button>
            </StackPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="60" Background="#1D1A27">
            <Grid>
                <Button HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0" Style="{StaticResource BtnLogin}" Content="Acerca de" Height="23" Name="btnAcerca" Width="76" Click="btnAcerca_Click" />
                <TextBlock FontSize="15"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,184,0" Foreground="#1cbfff" Width="60" Height="23" Text="Usuario:" />
                <TextBlock FontSize="15" Name="txtNombreUsu" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,85,0" Foreground="White" Width="93" Height="23"/> 
                <Ellipse Name="Elipse" Width="50" Height="50" StrokeThickness="2" Margin="0, 5,30,5" HorizontalAlignment="Right">

                    <Ellipse.Stroke>
                        <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                            <GradientStop Color="#FFE63070" Offset="2" />
                            <GradientStop Color="#FFFE8704" Offset="0" />
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                </Ellipse>
            </Grid>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">

            <DockPanel DockPanel.Dock="Left">
                <StackPanel Width="279" HorizontalAlignment="Left" Background="#100E17" Orientation="Vertical">
                    <Grid Height="98" Background="#272335">
                        <Image Width="65" Source="./Resources/food-serving.png" Margin="7,0,207,10" />
                        <TextBlock VerticalAlignment="Center" Text=" GOOD FOOD" FontSize="28" FontWeight="Bold" Margin="63,25,6,33" FontFamily="Segoe Script">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                            <GradientStop Color="#FFE63070" Offset="2" />
                            <GradientStop Color="#FFFE8704" Offset="0" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="ADMIN" FontSize="13" Foreground="#1cbfff" Margin="226,57,4,24"/>
                    </Grid>
                    <StackPanel Background="Transparent" Height="366">

                        <!--<Grid Height="60" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
                    <Rectangle HorizontalAlignment="Left" Width="10" Fill="Transparent"/>
                    <TextBlock Foreground="LightGray" Text="Usuarios" FontSize="22" VerticalAlignment="Center" Margin="20 0" />
                </Grid>-->
                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuUsuarios_Click" TabIndex="1">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/user.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Usuario" />
                            </StackPanel>
                        </Button>

                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuArticulos_Click" TabIndex="2">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/product.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Artículos" />
                            </StackPanel>
                        </Button>

                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuFamilia_Click" TabIndex="3">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/restaurant-menu.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Familia" />
                            </StackPanel>
                        </Button>

                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuCategoria_Click" TabIndex="5">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/fast-food.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Categoria" />
                            </StackPanel>
                        </Button>

                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuUnidades_Click">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/ruler.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Unidades de medida" />
                            </StackPanel>
                        </Button>

                        <Button Height="60" Style="{StaticResource BtnMenu}" Click="menuHistorial_Click">
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Image Height="35" HorizontalAlignment="Left" Source="./Resources/historial-de-transacciones.png"/>
                                <TextBlock FontSize="20" Foreground="White" Text="  Historial" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Background="#272335" Height="170" />
                </StackPanel>
            </DockPanel>

            <!--Media-->

            <DockPanel DockPanel.Dock="Right" Background="LightGray">
                <StackPanel Margin="10 40">
                    <StackPanel.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="./Resources/food-serving-grand.png" />
                    </StackPanel.Background>
                    <DockPanel Visibility="Hidden" Name="dpVideo" Margin="0 30" Background="#211c33">
                        <DockPanel DockPanel.Dock="Left" >
                            <StackPanel DockPanel.Dock="Top">
                                <TextBlock Background="#403B51" Padding="5" Margin="0 20" TextAlignment="Center" Text="INTEGRANTES" Foreground="#1cbfff"/>
                                <TextBlock Text="  Cruz, Pablo Joaquín" Foreground="White"/>
                                <TextBlock Text="  Coria, Jorge Delfín" Foreground="White"/>
                                <TextBlock Text="  Grafión, Atilio Leonel" Foreground="White"/>
                                <TextBlock Text="  Oviedo, Ingacio Nicolás" Foreground="White"/>
                                <TextBlock Text="  Marcia, Pamela Velarde" Foreground="White"/>
                            </StackPanel>
                            <Button Name="bntCerrarVideo" Margin="0 115 0 0" Content="Cerrar" Width="70" Height="23" Style="{StaticResource BtnLogin}" Click="bntCerrarVideo_Click" />
                        </DockPanel>
                        <DockPanel DockPanel.Dock="Right" Width="420" Margin="0 20">
                            <DockPanel DockPanel.Dock="Top" Height="240">
                                <MediaElement Name="mediaElm" MediaOpened="mediaElm_MediaOpened" />
                            </DockPanel>
                            <StackPanel Height="50" DockPanel.Dock="Top" Background="#403B51">
                                <StackPanel>
                                    <Slider Height="23" Name="sldVideo" VerticalAlignment="Top" Width="359" ValueChanged="sldVideo_ValueChanged" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource BtnLogin}" Margin="30 0 10 0" Content="Play" HorizontalAlignment="Left" Name="btnPlay" VerticalAlignment="Top" Width="75" Height="23" Click="btnPlay_Click" />
                                    <Button Style="{StaticResource BtnLogin}" Margin="0 0 10 0" Content="Pause" HorizontalAlignment="Left" Name="btnPause" VerticalAlignment="Top" Width="75" Height="23" Click="btnPause_Click" />
                                    <Button Style="{StaticResource BtnLogin}" Margin="0 0 10 0" Content="Stop" HorizontalAlignment="Left" Name="btnStop" VerticalAlignment="Top" Width="75" Height="23" Click="btnStop_Click" />
                                    <Slider Margin="20 0" Maximum="1" LargeChange="0.1" SmallChange="0.01" Value="1" Height="23" HorizontalAlignment="Left" Name="sldVol" VerticalAlignment="top" Width="68" ValueChanged="sldVol_ValueChanged" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </DockPanel>
                </StackPanel>

            </DockPanel>
        </DockPanel>
    </DockPanel>



    <!--
    <Grid>
        <Menu Height="23" HorizontalAlignment="Left" x:Name="menu1" VerticalAlignment="Top" Width="434" >
            <MenuItem Header="_Usuarios" x:Name="menuUsuarios" Click="menuUsuarios_Click" TabIndex="1"></MenuItem>
            <MenuItem Header="_Artículos" x:Name="menuArticulos" Click="menuArticulos_Click" TabIndex="2"></MenuItem>
            <MenuItem Header="_Familia" x:Name="menuFamilia" TabIndex="3" Click="menuFamilia_Click"></MenuItem>
            <MenuItem Header="_Categoría" x:Name="menuCategoria" TabIndex="4" Click="menuCategoria_Click"></MenuItem>
            <MenuItem Header="_Unidades de medida" x:Name="menuUnidades" TabIndex="5" Click="menuUnidades_Click"></MenuItem>
        </Menu>
        
    </Grid>-->
</Window>
