<Window x:Class="LPOO2_GRUPO_08.WinABMArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinABMArticulo" Height="300" Width="456" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Alta Artículo" Height="34" HorizontalAlignment="Left" Name="lblTitulo" VerticalAlignment="Top" FontSize="16" Margin="157,12,0,0" />
        <Label Content="Descripción" Height="28" HorizontalAlignment="Left" Margin="115,48,0,0" Name="lblDescrip" VerticalAlignment="Top" />
        <Label Content="Familia" Height="28" HorizontalAlignment="Left" Margin="140,82,0,0" Name="lblFamilia" VerticalAlignment="Top" />
        <Label Content="Unidad de medida" Height="28" HorizontalAlignment="Left" Margin="79,116,0,0" Name="lblUM" VerticalAlignment="Top" />
        <Label Content="Precio" Height="28" HorizontalAlignment="Left" Margin="144,150,0,0" Name="lblPrecio" VerticalAlignment="Top" />
        <Button Content="Volver" Height="23" HorizontalAlignment="Left" Name="btnVolver" VerticalAlignment="Top" Width="50" Margin="12,12,0,0" Click="btnVolver_Click" />
        <Button Content="Guardar" Height="23" HorizontalAlignment="Left" Margin="179,226,0,0" Name="btnGuardar" VerticalAlignment="Top" Width="75" Click="btnGuardar_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="193,52,0,0" Name="txtDescrip" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="193,154,0,0" Name="txtPrecio" VerticalAlignment="Top" Width="120" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="193,87,0,0" Name="cmbFamilia" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Bebidas" />
            <ComboBoxItem Content="Producto terminado" />
            <ComboBoxItem Content="Materia prima" />
        </ComboBox>

        <CheckBox Content="Stock" Height="16" HorizontalAlignment="Left" Margin="151,186,0,0" Name="chkStock" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FlowDirection="RightToLeft" Padding="12,-1,0,0" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="193,121,0,0" Name="txtUM" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
